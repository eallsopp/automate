

<h3><% if session[:message] %>
  <%= session.delete(:message) %>
<% end %></h3>
  <h1>How do you spend your time?</h1>

  <body>
  <fieldset>
    <form action='/add_entries' method='post'>
      <label for="date">Date:</label>
        <input class="button" type="date" name="date" value="2020-01-01" required>
          <ul>General Responsibilities: 
          <br>

            <li>
              <label for="work">Work</label>
              <input class='button' type='number' name='work' placeholder="in minutes" required>
            </li>
            <li>
              <label for="sleep">Sleep</label>
              <input class='button' type='number' name='sleep' placeholder="in minutes" required>
            </li>
            <li>
              <label for='commute'>Commute to Work</label>
              <input class='button' type='number' name='commute_to' placeholder="in minutes" required>
            </li>
            <li>
              <label for='reverse_commute'>Commute from Work</label>
              <input class='button' type='number' name='commute_from' placeholder="in minutes" required>
            </li>
            <li>
              <label for='meals'>Preparing Meals</label>
              <input class='button' type='number' name='meal_prep' placeholder="in minutes" required>
            </li>
            <li>
              <label for='eating_meals'>Eating Meals</label>
              <input class='button' type='number' name='eating_meals' placeholder="in minutes" required>
            </li>
          </ul>
          <ul>Additional Activities: <em>(Gym, Hobbies, Music Lessons etc..)</em>
            <li>
              <input class='text' type='text' name='hobby1' placeholder="Custom Name">
              <input class='button' type='number' name='hobby1time' placeholder='0'>
            </li>      
            <li>
              <input class='text' type='text' name='hobby2' placeholder="Custom Name">
              <input class='button' type='number' name='hobby2time' placeholder='0'>
            </li>  
            <li>
              <input class='text' type='text' name='hobby3' placeholder="Custom Name">
              <input class='button' type='number' name='hobby3time' placeholder='0'>
            </li>  
            <li>
              <input class='text' type='text' name='hobby4' placeholder="Custom Name">
              <input class='button' type='number' name='hobby4time' placeholder='0'>
            </li>    
            <li>
              <input class='text' type='text' name='hobby5' placeholder="Custom Name">
              <input class='button' type='number' name='hobby5time' placeholder='0'>
            </li> 
              <button type='text' class='button'>Submit</button>
              <button type='button' onclick="window.location.href='/timesheet'">Cancel</button>
            </ul>
      </form>
    </fieldset>  
    <br>
  </body>

  <footer>
    <fieldset>
      <form action="/signout" method="post"> 
        <button type="submit" class="button">Sign Out</button>
      </form>
    </fieldset>
  </footer>
